# Local Development Environment Configuration
# This file overrides production settings for local development

# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
SERVER_URL=http://localhost:5000

# Database (use SQLite for local development)
USE_SQLITE=true

# SQLite Database Configuration (for development only)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=magazine_dev
DB_USER=dev_user
DB_PASSWORD=dev_password

# JWT Configuration (same as production for consistency)
JWT_SECRET=MagazineWebsiteSecretKey2024!@#$%^&*()
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=MagazineWebsiteRefreshSecretKey2024!@#$%^&*()
REFRESH_TOKEN_SECRET=MagazineWebsiteRefreshSecretKey2024!@#$%^&*()
